<!--        VALUES (#{attendDate}, #{enrollmentId}, #{status}, #{note})-->
<!--    </insert>-->

    <!-- 성적 수정 -->
    <update id="updateMidFinGrades" parameterType="com.rainbowuniv.academicmenagmentbe.model.GradeDto" >
        UPDATE enrollment
        SET score = #{score},
        grade = #{grade}
        WHERE course_id = #{courseId}
            AND user_id = #{userId}
    </update>



</mapper>