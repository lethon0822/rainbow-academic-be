<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.rainbowuniv.demoproject.student.StudentMapper">

    <select id="studentFindById">
        SELECT * FROM student
        WHERE user_id = #{userId}
    </select>

    <insert id="student">
        INSERT INTO student (user_id, dept_id)
        VALUES (#{userId}, #{deptId})
    </insert>

</mapper>