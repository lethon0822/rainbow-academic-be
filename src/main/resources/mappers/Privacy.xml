<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rainbowuniv.academicmenagmentbe.privacyandpwd.PrivacyMapper">
    <select id="selectMyPrivacy">
        SELECT login_id, user_name, address, phone, email
        FROM user
        WHERE user_id = #{userId}
    </select>

    <update id="updateMyPrivacy">
        UPDATE user
        SET
        <if test="address != null || address != undefined">address = #{address}</if>
        <if test="phone != null || phone != undefined">, phone = #{phone}</if>
        <if test="email != null || email != undefined">, email = #{email}</if>
        WHERE user_id = #{userId}
    </update>
</mapper>