<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rainbowuniv.academicmenagmentbe.shared.notice.NoticeMapper">
    <insert id="insertNoticeByStaff">
        INSERT INTO notice (title, content)
        VALUES (#{title}, #{content});
    </insert>

    <select id="selectNoticeByTitle">
        SELECT * FROM notice
        WHERE title LIKE CONCAT('%', #{searchText}, '%')
    </select>

    <select id="selectNoticeByContent">
        SELECT * FROM notice
        WHERE content LIKE CONCAT('%', #{searchText}, '%')
    </select>

    <select id="selectNoticeByTitleORContent">
        SELECT * FROM notice
        <if test="searchText != null and searchText != ''">
            WHERE title LIKE CONCAT('%', #{searchText}, '%') OR content LIKE CONCAT('%', #{searchText}, '%')
        </if>
    </select>

    <select id="selectNoticeById">
        SELECT * FROM notice
        WHERE notice_id = #{noticeId}
    </select>

    <update id="updateNoticeByNoticeId">
        UPDATE notice
        SET title = #{title}, content = #{content}
        WHERE notice_id = #{noticeId}
    </update>

    <delete id="deleteNoticeByNoticeId">
        DELETE FROM notice
        WHERE notice_id = #{noticeId}
    </delete>
</mapper>