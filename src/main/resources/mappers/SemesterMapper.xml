<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rainbowuniv.academicmenagmentbe.semester.SemesterMapper">
    <!-- 단순히 PK가 시간순으로 증가한다는 가정일 때 가장 간단 -->
    <select id="findNextSemesterId" parameterType="int" resultType="int">
        SELECT semester_id
        FROM semester
        WHERE semester_id &gt; #{id}
        ORDER BY semester_id ASC
        LIMIT 1
    </select>
    <!-- 만약 PK가 순서랑 무관하면 (year, semester) 기반 비교 쿼리로 바꿔야 함 -->
</mapper>